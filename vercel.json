{
  "version": 2,
  "build": {
    "env": {
      "PNPM_INSTALL_OPTIONS": "--no-frozen-lockfile",
      "NODE_ENV": "production"
    }
  },
  "framework": "nextjs",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "images": {
    "quality": 75,
    "sizes": [320, 640, 960, 1200, 1800],
    "domains": [
      "images.pexels.com"
    ]
  },
  "functions": {
    "memory": 1024,
    "maxDuration": 10
  }
}
